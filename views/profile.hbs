<body>
	<!-- nav -->
	{{> nav}}
  <!-- houses form -->
  <!-- !!! how to make sure all cards go to the same height always? -->
  <div class="container text-center">
    <div class="row text-start">
      <div class="col-4">
		   <!-- profile section -->
        <h2 class="border-bottom pb-3">Profile</h2>
        <form action="/profile?_method=PATCH" method="post">
          <!-- replace name with proper input -->
          <div class="mb-3">
            <label class="form-label"
              >Full Name</label
            >
            <input
              type="text"
							name="name"
              class="form-control"
							value="{{userFull.name}}"
            />
          </div>
          <div class="mb-3">
            <label class="form-label"
              >Email</label
            >
            <input
              type="email"
							name="email"
              class="form-control"
							value="{{userFull.email}}"
            />
            <div id="emailHelp" class="form-text">
              We'll never share your email with anyone else.
            </div>
          </div>
					<div class="mb-3">
            <label class="form-label"
              >Profile Picture</label
            >
						<p>!!! avatar image from nav bar here</p>
            <input
              type="text"
							name="avatar"
              class="form-control"
							value="{{userFull.avatar}}"
            />
          </div>
          <button class="btn btn-primary">Save Changes</button>
        </form>
      </div>
      <!-- end profile section -->
      <div class="col-8 ps-5">
        <!-- listings section -->
        <h2 class="border-bottom mb-3 pb-3">My Listings</h2>
				<a href="houses/create">
        	<button class="btn btn-primary mb-3">
          	List a House
        	</button>
				</a>
				{{#if noListings}}
	        <!-- no listings -->
	        <div class="card mb-3">
	          <ul class="list-group list-group-flush">
	            <li class="list-group-item">You don't have any houses listed</li>
	          </ul>
	        </div>
				{{else}}
	        <!-- with listings -->
					{{#each listings as |listing|}}
	        	<div class="card mb-3">
	          <div class="row g-0">
	            <div class="col-md-4">
	              <img src="{{listing.photos.[0]}}" class="img-fluid rounded-start house-img card-img" alt="house main image" />
	            </div>
	            <div class="col-md-8">
	              <div class="card-body">
	                <h5 class="card-title">{{listing.title}}</h5>
									<!-- listing rooms and rate inline - match block with houses card -->
									<span>{{listing.location}} Rooms *bulletpoint* ${{listing.price}}/night</span>
	                <p class="card-text">
	                  {{listing.description}}
	                </p>
									<div class="row">
										<div class="col">
											<form action="houses/{{listing._id}}/edit" method="get">
												<button name="listingID" value="{{listing._id}}" class="btn btn-primary mb-3">Edit</button>
											</form>
										</div>
										<div class="col">
											<a href="houses/{{listing._id}}" class="btn btn-primary mb-3">
												View
											</a>
										</div>
									</div>
	              </div>
	            </div>
	          </div>
	        	</div>
					{{/each}}
				{{/if}}
      </div>
      <!-- end listing section -->
    </div>
  </div>
</body>
