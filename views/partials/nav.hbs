<!-- !!! make nav bar image  -->
<nav class="navbar">
	<!-- bg-light"> -->
	<div class="container">
		<a
			href="/houses"
		>
			<img
				class="navbar-brand logo"
				src="/images/logo-airbnb.png"
				alt="airbnb logo"
			/>
		</a>
		<!-- if logged in -->
		{{#if auth}}
			<div class="d-flex-inline">
				<a
					href="/profile"
					class="btn btn-outline-secondary d-flex-inline align-items-center me-2"
					><img
						src="{{user.avatar}}"
						alt="account avatar"
						class="avatar-img"
					/>
					<span>{{user.name}}</span></a
				>
				<a href="/auth/logout" class="btn btn-outline-secondary">Logout</a>
			</div>
		{{/if}}
		<!-- if not logged in -->
		{{#unless auth}}
		<div class="d-flex-inline">
			<a href="/auth/login" class="btn btn-outline-secondary">Login</a>
		</div>
		{{/unless}}
	</div>
</nav>
